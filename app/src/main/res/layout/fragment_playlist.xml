<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ebebeb"
    tools:context=".PlaylistFragment"
    android:id="@+id/relativelayout">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/listView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:id="@+id/button11"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="false"
        android:background="@drawable/circle_button"
        android:textAlignment="center"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:layout_alignParentRight="true"
        android:elevation="6dp"
        android:translationZ="2dp"
        android:src="@drawable/plus_vector" />

    <ImageButton
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:id="@+id/imageButton"
        android:src="@drawable/delete_vector"
        android:background="@drawable/circle_del_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="false"
        android:layout_margin="16dp"
        android:layout_toStartOf="@id/button11"
        android:translationZ="2dp"
        android:elevation="6dp"
        android:focusable="false" />

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:indeterminate="true"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textView4"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone" />

    <ListView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/listView2"
        android:layout_margin="20dp"
        android:background="@drawable/pl_add_menu"
        android:clickable="false"
        android:visibility="gone"
        android:paddingBottom="40dp"
        android:translationZ="2dp"
        android:elevation="8dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/linearlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:translationZ="2dp"
        android:elevation="8dp"
        android:visibility="gone">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="play"
            android:id="@+id/button14"
            android:layout_alignBottom="@+id/listView2"
            android:background="@drawable/pl_add_menu"
            android:visibility="gone"
            android:textColor="#FF787878"
            android:layout_alignStart="@+id/listView2"
            android:layout_alignParentStart="false"
            android:layout_toStartOf="@+id/button13"
            android:elevation="8dp"
            android:translationZ="2dp"
            android:layout_weight="1"
            android:layout_gravity="bottom" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="enqueue"
            android:id="@+id/button13"
            android:background="@drawable/pl_add_menu"
            android:visibility="gone"
            android:textColor="#FF787878"
            android:layout_centerHorizontal="true"
            android:elevation="8dp"
            android:translationZ="2dp"
            android:layout_alignBottom="@+id/listView2"
            android:layout_weight="1"
            android:layout_gravity="bottom|center_horizontal" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="cancel"
            android:id="@+id/button12"
            android:layout_alignBottom="@+id/listView2"
            android:layout_alignEnd="@+id/listView2"
            android:layout_toEndOf="@+id/button13"
            android:background="@drawable/pl_add_menu"
            android:visibility="gone"
            android:textColor="#FF787878"
            android:elevation="8dp"
            android:translationZ="2dp"
            android:layout_weight="1"
            android:layout_gravity="bottom" />

    </LinearLayout>

</RelativeLayout>
